.row
  .col-sm-12
    .navbar.navbar-default
      .container-fluid
        .navbar-header
          = link_to 'CopyQiita2', root_path, class: "navbar-brand"

        %ul.nav.navbar-nav.navbar-right
          - if user_signed_in?
            %li{style: "margin-top:8px;"}
              .btn-group
                %button#dropdownMenuPost.btn.btn-success.dropdown-toggle{ type: "button", data: { toggle: "dropdown"}, area: { haspopup: "true", expanded: "false" }}
                  %i.glyphicon.glyphicon-pencil
                  %span 投稿する
                  %span.caret
                %ul.dropdown-menu
                  %li
                    = link_to drafts_path do
                      %i.glyphicon.glyphicon-list
                      %span 下書き一覧
                  %li
                    = link_to new_draft_path do
                      %i.glyphicon.glyphicon-pencil
                      %span 下書きを書く

            %li.dropdown
              = link_to '#"', class: "dropdown-toggle", data: { toggle: "dropdown" }, role: "button", area: { haspopup: "true", expanded: "false" } do
                %span= current_user.email
                %span.caret
              %ul.dropdown-menu
                %li
                  = link_to user_path do
                    %i.glyphicon.glyphicon-user
                    %span マイページ
                %li
                  = link_to edit_user_registration_path do
                    %i.glyphicon.glyphicon-cog
                    %span 設定
                %li
                  = link_to destroy_user_session_path, method: :delete do
                    %i.glyphicon.glyphicon-log-out
                    %span ログアウト
          - else
            %li= link_to 'ログイン', new_user_session_path
