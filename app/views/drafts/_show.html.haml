#draft-show-header
  .draft-commands
    = link_to '編集する', edit_draft_path(@draft), class: "btn btn-default"
    = link_to draft_path(@draft), class: "btn btn-danger pull-right", method: :delete do
      %i.glyphicon.glyphicon-trash
      %span 削除する

  .draft-body
    .draft-title
      .draft-header= @draft.title
      .draft-tags
        - @draft.tag_list.each do |tag|
          .tag.label.label-info= tag
    .draft-content
      = markdown(@draft.content)